            <ui:RadioButtonGroup name="bigLights">
                <ui:RadioButton label="Oui" value="false" />
                <ui:RadioButton label="Non" value="true" />
            </ui:RadioButtonGroup>
        </ui:GroupBox>
    </ui:VisualElement>
