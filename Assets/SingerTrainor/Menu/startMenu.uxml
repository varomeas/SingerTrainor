            <ui:Label text="Les lumières de la salle sont elles allumées?" />
            <ui:RadioButtonGroup name="roomLights" style="border-bottom-width: 39px;">
                <ui:RadioButton label="Oui" toggle-on-label-click="false" style="flex-direction: row;" />
                <ui:RadioButton label="Non" />
